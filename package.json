{
  "name": "HDF",
  "version": "v1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "author": "SMART_GENX",
  "homepage": "https://electron-vite.org",
  "workspaces": [
    "app",
    "server"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "prebuild": "npx prisma generate --schema=server/prisma/schema.prisma && npm run build:server",
    "build:server": "cd server && npx prisma generate && npm run build && cd ..",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:local": "npm run build && electron-builder --win --config.win.target=portable --config.nsis.oneClick=false --publish=never",
    "build:dev": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win --publish=never",
    "build:workaround": "npm run build && cross-env ELECTRON_BUILDER_CACHE=false CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win --publish=never",
    "build:win": "node build-server.js && npm run build && electron-builder --win --publish=never",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "prisma:generate": "prisma generate --schema=server/prisma/schema.prisma",
    "prepare": "husky install",
    "prisma:migrate": "prisma migrate deploy"
  },
  "dependencies": {
    "@auth-kit/react-router": "^3.1.3",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@heroicons/react": "^2.1.5",
    "@hookform/resolvers": "^3.9.0",
    "@prisma/client": "^5.22.0",
    "@prisma/engines": "^5.22.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-context-menu": "^2.2.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-direction": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@react-pdf/renderer": "^3.4.4",
    "@shadcn/ui": "^0.0.4",
    "@tanstack/react-query": "^5.51.23",
    "@tanstack/react-query-devtools": "^5.51.23",
    "@tanstack/react-table": "^8.20.1",
    "axios": "^1.7.3",
    "chart.js": "^4.4.3",
    "child_process": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "cmdk": "^1.0.0",
    "electron-log": "^5.2.4",
    "electron-updater": "^6.3.9",
    "lucide-react": "^0.427.0",
    "passport": "^0.7.0",
    "qrcode.react": "^4.0.1",
    "react-auth-kit": "^2.12.4",
    "react-barcode": "^1.5.3",
    "react-chartjs-2": "^5.2.0",
    "react-day-picker": "^8.10.1",
    "react-hook-form": "^7.52.2",
    "react-router-dom": "^6.26.0",
    "react-select": "^5.8.1",
    "react-to-print": "^2.15.1",
    "tailwindcss-animate": "^1.0.7",
    "util": "^0.12.5",
    "uuid": "^11.1.0",
    "vaul": "^0.9.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@types/node": "^20.19.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "husky": "^9.1.7",
    "postcss": "^8.4.41",
    "prettier": "^3.3.2",
    "prisma": "^5.22.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "semantic-release": "^22.0.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss": "^3.4.8",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^5.3.1"
  },
  "resolutions": {
    "cli-table3": "^0.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SmartGenx/hdf-desktops-electron.git"
  },
  "build": {
    "appId": "com.SmartGenx.autoupdate",
    "artifactName": "HDF-Setup-${version}.${ext}",
    "publish": {
      "provider": "github",
      "owner": "SmartGenx",
      "repo": "hdf-desktops-electron",
      "releaseType": "release"
    },
    "win": {
      "icon": "resources/logo.ico",
      "verifyUpdateCodeSignature": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "dist/**/*",
      "out/**/*",
      "main/**/*",
      "preload/**/*",
      "renderer/**/*",
      "!**/node_modules/**/test/**/*",
      "!**/node_modules/**/docs/**/*",
      "!**/node_modules/**/examples/**/*",
      "!**/node_modules/**/demo/**/*",
      "!**/*.map",
      "!**/tsconfig.*",
      "!**/*.test.js",
      "!**/*.spec.js"
    ],
    "extraResources": [
      {
        "from": "server/dist",
        "to": "server/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/.prisma",
        "to": "server/node_modules/.prisma",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/@prisma",
        "to": "server/node_modules/@prisma",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "server/node_modules",
        "to": "server/node_modules",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".env",
        "to": ".env"
      },
      {
        "from": "server/prisma",
        "to": "prisma",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "server/dist/**/*",
      "server/node_modules/.prisma/**",
      "server/node_modules/@prisma/**"
    ]
  }
}
